<mvc:View controllerName="mlauffer.demo.openui5.tour.controller.App" displayBlock="true"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m">
    <Shell>
        <App>
            <Page id="page" title="{i18n>TITLE}">
                <Toolbar id="toolbar" design="Info">
                    <ToolbarSpacer />
                    <Button icon="sap-icon://begin" text="{i18n>START}"  press="onStartTour" />
                </Toolbar>
                <Panel id="panel1" height="200px">
                    <Title text="Panel 1" />
                </Panel>
                <Panel id="panel2" height="200px" backgroundDesign="Solid">
                    <Title text="Panel 2" />
                </Panel>
                <Panel id="panel3" height="200px">
                    <Title id="title3" text="Panel 3" />
                </Panel>
                <Panel id="panel4" height="200px" backgroundDesign="Solid">
                    <Title text="Panel 4" />
                </Panel>
                <Panel id="panel5" height="200px">
                    <Title text="Panel 5" />
                </Panel>
            </Page>
        </App>
    </Shell>
</mvc:View>
